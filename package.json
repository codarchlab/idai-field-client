{
  "name": "idai-field-client",
  "description": "iDAI.field 2 Client",
  "main": "electron/main.js",
  "version": "2.15.0",
  "license": "Apache-2.0",
  "author": "German Archaeological Institute",
  "scripts": {
    "prebuild": "rimraf css/* && rimraf src/* && rimraf fonts/*",
    "build": "gulp copy-fonts-convert-sass && tsc -p app/tsconfig.json && tsc -p test/tsconfig.json",
    "build-java": "mvn -f java/pom.xml clean package && gulp copy-shapefile-tool",
    "build-all": "npm run build && npm run build-java",
    "clean": "git clean -xdf app test",
    "convert-sass": "gulp convert-sass",
    "reset": "npm install && npm run clean && npm run build",
    "reset-all": "npm install && npm run clean && npm run build-all",
    "start": "electron . dev",
    "test": "jasmine JASMINE_CONFIG_PATH=test/unit/config/jasmine.json",
    "pree2e": "rimraf test/e2e-screenshots/*.png",
    "e2e": "node test/e2e/spectron.js",
    "package": "build -mw --publish never",
    "package-mac": "electron-builder -m",
    "package-win": "electron-builder -w nsis",
    "i18n": "ng-xi18n --locale de --project app && ngx-extractor -i \"./app/**/*.ts\" \"./node_modules/idai-components-2/src/**/*.ts\" -o ./app/messages.xlf -l de && xliffmerge --profile xliff-merge.json && rimraf app/messages.xlf"
  },
  "build": {
    "appId": "org.dainst.field",
    "productName": "iDAI.field",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "img/logo.icns",
      "artifactName": "iDAI.field-${version}-MacOS.${ext}",
      "publish": "github",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "target": "zip",
      "icon": "img/logo.ico",
      "artifactName": "iDAI.field-${version}-Windows.${ext}",
      "publish": "github"
    },
    "npmRebuild": false,
    "afterSign": "notarize.js",
    "extraResources": [
      "config",
      "tools",
      "test/test-data/imagestore-samples"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dainst/idai-field.git"
  },
  "dependencies": {
    "@angular/common": "8.2.4",
    "@angular/core": "8.2.4",
    "@angular/forms": "8.2.4",
    "@angular/http": "8.0.0-beta.10",
    "@angular/platform-browser": "8.2.4",
    "@angular/platform-browser-dynamic": "8.2.4",
    "@angular/platform-server": "8.2.4",
    "@angular/router": "8.2.4",
    "@mdi/font": "3.5.95",
    "@ng-bootstrap/ng-bootstrap": "4.0.0",
    "@ngx-translate/i18n-polyfill": "1.0.0",
    "Leaflet.vector-markers": "0.0.6",
    "address": "1.1.2",
    "angular2-uuid": "1.1.1",
    "bootstrap": "4.3.1",
    "electron-log": "3.0.7",
    "electron-updater": "4.1.2",
    "es6-shim": "0.35.4",
    "express": "4.16.4",
    "express-pouchdb": "^4.2.0",
    "geojson-rewind": "0.3.1",
    "idai-components-2": "1.46.10",
    "leaflet": "1.5.1",
    "leaflet-imageoverlay-rotated": "0.1.1",
    "leaflet.pm": "0.17.3",
    "moment": "2.22.2",
    "pouchdb": "7.0.0",
    "pouchdb-load": "1.4.6",
    "pouchdb-replication-stream": "1.2.9",
    "pouchdb-server": "^4.2.0",
    "reflect-metadata": "0.1.12",
    "roboto-fontface": "0.6.0",
    "rxjs": "6.4.0",
    "showdown": "^1.9.1",
    "svg-pan-zoom": "3.6.0",
    "systemjs": "0.21.5",
    "tsfun": "3.5.4",
    "tsfun-core": "3.5.2",
    "tsfun-extra": "3.5.2",
    "viz.js": "1.8.1",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular/compiler-cli": "8.2.4",
    "@mapbox/geojsonhint": "2.1.0",
    "@types/geojson": "0.0.32",
    "@types/jasmine": "~2.5.41",
    "@types/leaflet": "1.0.69",
    "@types/leaflet-imageoverlay-rotated": "0.1.0",
    "@types/leaflet.pm": "0.13.0",
    "@types/node": "12.7.4",
    "@types/pouchdb": "6.3.2",
    "@types/showdown": "1.7.5",
    "electron": "6.0.7",
    "electron-builder": "21.2.0",
    "electron-notarize": "0.1.1",
    "electron-packager": "14.0.5",
    "file-api": "0.10.4",
    "file-url": "2.0.2",
    "gulp": "3.9.1",
    "gulp-concat": "2.6.1",
    "gulp-rename": "1.4.0",
    "gulp-sass": "4.0.2",
    "jasmine": "2.5.2",
    "jasmine-core": "2.5.2",
    "ngx-i18nsupport": "0.17.1",
    "pouchdb-adapter-memory": "7.0.0",
    "protractor": "5.4.1",
    "protractor-console-plugin": "0.1.1",
    "protractor-fail-fast": "3.1.0",
    "protractor-hotkeys": "0.0.5",
    "rimraf": "2.6.2",
    "spectron": "8.0.0",
    "typescript": "3.5.2",
    "yargs": "12.0.2"
  }
}
